                                    <label for="filters.type.{{ name }}">{{ title }}</label>
                                </span>
                            {% endfor %}
                        </fieldset>
                    {% endif %}

                    <a href="#" class="apply-filters button-border" data-filters="apply">Apply Filters</a>
                    <a href="#" class="reset-defaults button-border" data-filters="reset">Reset to Defaults</a>
                </div>
            </form>
