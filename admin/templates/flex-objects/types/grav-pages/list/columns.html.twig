{% macro toggle(id, title, filters) %}
    {% set name = id|fieldName %}
    {% set filter = filters[name] ?? null %}
    {% set value = filter is null ? 0 : (not filter)|int+1 %}

    <span class="checkboxes indeterminate toggleable">
        <input type="checkbox" id="{{ id }}" name="{{ name }}" {% if value == 0 %}indeterminate="false"{% endif %} value="{{ filter }}"
               data-_check-status="{{ value }}">
        <label for="{{ id }}">{{ title }}</label>
    </span>
{% endmacro %}

{% import _self as macros %}

