{% block directory %}
  <div id="pages-content-wrapper">
    <div id="pages-filters">
      <form>
        <div class="filters-bar">
          <input type="text" placeholder="Search..." name="filters[search]" />
          <a href="#" class="adv-options button-border open">Advanced Options</a>
        </div>

        <div class="filters-advanced {#hide#}">
          <fieldset>
            <legend>Page Attributes</legend>
            <span class="checkboxes indeterminate toggleable">
                <input type="checkbox" id="filters.routable" name="filters[routable]" indeterminate="false" value="" data-_check-status="0">
                <label for="filters.routable">Routable</label>
            </span>
            <span class="checkboxes indeterminate toggleable">
                <input type="checkbox" id="filters.module" name="filters[module]" indeterminate="false" value="" data-_check-status="0">
                <label for="filters.module">Module</label>
            </span>
            <span class="checkboxes indeterminate toggleable">
                <input type="checkbox" id="filters.visible" name="filters[visible]" indeterminate="false" value="" data-_check-status="0">
                <label for="filters.visible">Visible</label>
            </span>
            <span class="checkboxes indeterminate toggleable">
                <input type="checkbox" id="filters.published" name="filters[published]" indeterminate="false" value="" data-_check-status="0">
                <label for="filters.published">Published</label>
            </span>
            <span class="checkboxes indeterminate toggleable">
                <input type="checkbox" id="filters.translated" name="filters[translated]" indeterminate="false" value="" data-_check-status="0">
                <label for="filters.translated">Translated</label>
            </span>
          </fieldset>

          <fieldset>
            <legend>Page Types</legend>
            {% for name,title in admin.types %}
              <span class="checkboxes toggleable">
                <input type="checkbox" id="filters.type.{{ name }}" name="filters[page_type][]" value="{{ name }}">
                <label for="filters.type.{{ name }}">{{ title }}</label>
              </span>
            {% endfor %}
          </fieldset>

          <a href="#" class="apply-filters button-border" data-filters="apply">Apply Filters</a>
          {#<a href="#" class="reset-defaults button-border" data-filters="reset">Reset to Defaults</a>#}
        </div>
      </form>
    </div>

    <div class="grav-loading">
      <div class="grav-loader">Loading...</div>
    </div>
