{% extends 'flex-objects/pages/edit.html.twig' %}

{% block edit %}
    {% include 'partials/blueprints.html.twig' with { context: entry, data: entry, blueprints: blueprint } %}

    {% if id %}
        <div class="button-bar danger">
            <span class="danger-zone"></span>
            <a href="#delete" data-remodal-target="delete" data-delete-url="{{ uri.addNonce(flex.editRoute(entry)  ~ '/action' ~ separator ~ 'delete', 'admin-form', 'admin-nonce') }}" class="button" ><i class="fa fa-fw fa-warning"></i> Delete Entry</a>
        </div>
        {% include 'flex-objects/pages/modals/remove.html.twig' with { name: target } %}
    {% endif %}

    {% include 'partials/modal-changes-detected.html.twig' %}
{% endblock %}
