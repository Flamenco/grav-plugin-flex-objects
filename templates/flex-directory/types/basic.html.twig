{% set directory = grav.flex_directory.directory(type) %}
{% set data = directory.collection.getData().toArray() %}

<div id="flex-directory">
    <ul class="list">
        {% for entry in data %}
            <li>
                <div class="entry-details">
                    {% for key,field in entry %}
                        <div>{{ key }}: {{ field|json_encode }}</div>
                    {% endfor %}
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
