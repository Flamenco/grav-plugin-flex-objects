<table id="data-table" class="table">
    <colgroup>
        <col width="20" />
        <col width="80" />
    </colgroup>
    <thead>
    <tr>
        <th>Type</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    {% for type, directory in directories %}
        {%- set directory_options = options.directories[type] ?? {} %}
        <tr>
            <td>
                <a href="{{ url(directory_url ~ '/directory:' ~ type)|e }}">{{ (directory_options.title ?? directory.title)|e }}</a>
            </td>
            <td>
                {{ (directory_options.description ?? directory.description)|e }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
